<h2><%= @page_title%></h2>
<%= form_for [:admin, @department] do |f| %>

<% if @department.errors.any? %>
  <% @department.errors.full_messages.each do |msg| %>
   <!-- show errors -->
     <div class="alert alert-danger"><%= msg %></div>
     <% end %>
  <% end %>
	<div class="form-group">
		<%= f.label :name%><br/>
		<%=f.text_field :name, class:'form_control' %>
	</div>
    	<div class="form-group">
		<%= f.label :full_name%><br/>
		<%=f.text_field :full_name, class:'form_control' %>
	</div>
	<%= f.submit 'Submit',class:'btn btn-primary' %>
		<%= link_to 'Cancel', admin_departments_path, class:'btn btn-default'%>
<% end %>